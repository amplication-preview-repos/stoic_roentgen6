datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Permission {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
}

model Role {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Account {
  attempts       Int?
  billingid      String?
  billingusers   String?
  createdAt      DateTime  @default(now())
  createdDate    DateTime?
  credits        Int?
  email          String?
  id             String    @id @default(cuid())
  info           String?
  lastUpdateDate DateTime?
  password       String?
  recovery       String?
  status         String?
  updatedAt      DateTime  @updatedAt
}
